## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <header id="header">
        <div class="container">
            ${html_translation_header()}
            ${html_navigation_links()}
            %if search_form:
                <div class="searchform" role="search">
                    ${search_form}
                </div>
            %endif
        </div>
    </header>
    ${template_hooks['page_header']()}
</%def>

<%def name="html_site_title()">
    <h1 id="brand"><a href="${_link("root", None, lang)}" title="${blog_title|h}" rel="home">
    %if logo_url:
        <img src="${logo_url}" alt="${blog_title|h}" id="logo" class="is-hidden">
    %endif

    % if show_blog_title:
        <span id="blog-title">${blog_title|h}</span>
    % endif
    </a></h1>
</%def>

<%def name="html_navigation_links()">
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div class="navbar-menu">
            <div class="navbar-start">
                ${html_navigation_links_entries(navigation_links)}
                ${html_navigation_links_entries(navigation_alt_links)}
                ${template_hooks['menu']()}
                ${template_hooks['menu_alt']()}
            </div>
            <div class="navbar-end">
                <div class="navbar-item">
                    <a href="/en/" class="is-light"></a>
                </div>
            </div>
        </div>
    </nav>
</%def>

<%def name="html_navigation_links_entries(navigation_links_source)">
    %for url, text in navigation_links_source[lang]:
        % if not isinstance(url, tuple):
            %if rel_link(permalink, url) == "#":
                <a class="navbar-item is-me" href="${url}">${text}</a>
            %else:
                <a class="navbar-item" href="${url}">${text}</a>
            % endif
        % else:
            <a class="navbar-link">${text}</a>
            <div class="navbar-dropdown">
            %for suburl, text in url:
                %if rel_link(permalink, url) == "#":
                    <a class="navbar-item is-me" href="${suburl}">${text}</a>
                %else:
                    <a class="navbar-item" href="${suburl}">${text}</a>
                % endif
            %endfor
            </div>
        % endif
    %endfor
</%def>

<%def name="html_translation_header()">
    %if len(translations) > 1:
        <div id="toptranslations">
            <h2>${messages("Languages:")}</h2>
            ${base.html_translations()}
        </div>
    %endif
</%def>
